---
import Layout from '../layouts/Layout.astro';
import H1 from '../components/H1.astro';
import Avatar from '../components/avatar/Avatar.astro';
import History from '../components/History.astro';
import Details from '../components/Details.astro';
import Skills from '../components/Skills.astro';
import Languages from '../components/Languages.astro'
import Education from '../components/Education.astro';
---
<Layout>
	<main>
		<section>
				<div class="section-wrapper">
					<Avatar />
					<H1 title="Profile" />
					<p class="description">
						I'm frontend developer with <strong>6+ years</strong> of experience. 
						Strong knowledge in the framework <strong>React.js</strong>.
						Mainly the development of high-load b2b applications.
					</p>

					<History />
				</div>
			</section>

			<section class="second-part">
				<div class="section-wrapper">
					<Details />
					<Skills />
					<Languages />
					<Education />
				</div>
			</section>
	</main>
</Layout>

<style>
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}

	section {
		padding: 40px;
		background-color: #F6F6F6;
	}

	.section-wrapper {
		max-width: 700px;
		margin: auto;
	}

	.second-part {
    background: #082a4d;
		color: #fff;
	}

	.description {
    text-indent: 20px;
    margin: 0;
    font-size: 20px;
    line-height: 22px;
	}
</style>
